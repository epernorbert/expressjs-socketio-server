script(src='/socket.io/socket.io.js')
script(src='public/javascript/script.js')
script(src='/timesync/timesync.js')
script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
title Index
style.
    #timer{font-size: 60px;}
    h1{margin: 0;}    
header
    h1= message
    #timer.timer
    #offset.offset    
    #status(value=status)
    #start
    #endTime(value=end)
    #pause(value=minuteLeft)
    #countdown=minute
script.
    var socket = io('192.168.100.181:5000');
    socket.on('send-minute', function(data){    
        $("#status").attr("value",data.status);
        $("#countdown").text(msConversion(data.inputValue));        
    });
    socket.on('send-start', function(data){        
        $("#status").attr("value",data.status);
        $("#start").attr("value",data.clickStart);
        $("#endTime").attr("value",data.endTime);
    });   
    socket.on('send-pause', function(data){    
        $("#status").attr("value",data.status);
        $("#pause").attr("value",data.minuteLeft);        
    });     
        
    // create a timesync instance
    var ts = timesync.create({
        server: '/timesync',
        interval: 4000
    });
    // get notified on changes in the offset
    ts.on('change', function (offset) {
        /* $('.offset').text('changed offset: ' + offset + ' ms'); */
    });
    // get synchronized time
    setInterval(function () {
        var now = new Date(ts.now());
        $('.timer').text(now.getHours() + ':' + now.getMinutes() + ':' + now.getSeconds());
        /* $('.timer').text(now.getTime()); */
        var endTime = $("#endTime").attr('value')
        // undefined or send
        if($('#status').attr('value') == undefined || $('#status').attr('value') == 'send'){

        }
        // start
        if($('#status').attr('value') == 'start'){
            console.log($('#status').attr('value'))
            if(endTime != ''){                                
                $("#countdown").text(msConversion((endTime - now.getTime())))
            }
        }                
    }, 100);   
       
    // pause
    var counter = 0;
    var refreshId = setInterval(function() {
        counter++;
        if($('#status').attr('value') == 'pause'){            
            $("#countdown").text(msConversion($('#pause').attr('value')))
        }
        if (counter > 20) {
            clearInterval(refreshId);
        }        
    }, 200);

    function msConversion(millis) {
        let sec = Math.floor(millis / 1000);
        let hrs = Math.floor(sec / 3600);
        sec -= hrs * 3600;
        let min = Math.floor(sec / 60);
        sec -= min * 60;
        sec = '' + sec;
        sec = ('00' + sec).substring(sec.length);
        if (hrs > 0) {
            min = '' + min;
            min = ('00' + min).substring(min.length);
            return hrs + ":" + min + ":" + sec;
        }
        else {
            return min + ":" + sec;
        }
    }
